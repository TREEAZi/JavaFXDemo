<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="300.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.javafxdemo.javafxdemo.AddStuView">
   <children>
      <VBox alignment="CENTER" prefHeight="300.0" prefWidth="250.0">
         <children>
            <VBox alignment="CENTER" prefHeight="108.0" prefWidth="250.0">
               <children>
                  <Label alignment="CENTER" cache="true" focusTraversable="false" prefHeight="42.0" prefWidth="100.0" text="添加学生" textAlignment="CENTER">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <effect>
                        <Blend mode="LIGHTEN" />
                     </effect>
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="success" alignment="CENTER" focusTraversable="false" prefHeight="15.0" prefWidth="100.0" text="学生信息添加成功!" textAlignment="CENTER" textFill="RED" visible="false">
                     <padding>
                        <Insets bottom="-10.0" />
                     </padding>
                  </Label>
               </children>
            </VBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="250.0">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <children>
                  <Label alignment="CENTER" focusTraversable="false" prefHeight="31.0" prefWidth="49.0" text="学号:" textAlignment="CENTER">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="stuNum" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER" focusTraversable="false" prefHeight="31.0" prefWidth="49.0" text="姓名:" textAlignment="CENTER">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="stuName" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <children>
                  <Label alignment="CENTER" focusTraversable="false" prefHeight="31.0" prefWidth="49.0" text="班级:" textAlignment="CENTER">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="stuClassName" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <VBox.margin>
                  <Insets bottom="30.0" />
               </VBox.margin>
               <children>
                  <Button fx:id="addStu" contentDisplay="CENTER" focusTraversable="false" mnemonicParsing="false" onAction="#addStu" prefHeight="41.0" prefWidth="73.0" text="添加" textAlignment="CENTER">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
